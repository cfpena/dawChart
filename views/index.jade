    link(href='styles/sweet-alert.css', rel='stylesheet')
    link(href='styles/swal-forms.css', rel='stylesheet')
    link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
    link(href='styles/materialize.css', type='text/css', rel='stylesheet', media='screen,projection')
    link(href='styles/style.css', type='text/css', rel='stylesheet', media='screen,projection')
  body
    // Modal Login Structure
    #login.modal.bottom-sheet
      .modal-content
        h5.header.center.teal-text.text-lighten-2 Login
        form#myformlogin.col.s12(role="form", action="auth/local", method="post")
          .row
            .input-field.col.s3.offset-s4
              i.material-icons.prefix email
              input#email.validate(type='email')
              label(for='icon_prefix', data-error='wrong email') Email
          .row
            .input-field.col.s3.offset-s4
              i.material-icons.prefix lock
              input#password.validate(type='password')
              label(for='password') Password
            div
              a.modal-action.modal-close.waves-effect.waves-light.btn(onclick="document.getElementById('myformlogin').submit()") Login
    // Modal Signup Structure
    #signup.modal.bottom-sheet
      .modal-content
        h5.header.center.teal-text.text-lighten-2 Sign Up
        .row
          form#myformRegister.col.s12(role="form", action="auth/local/register", method="post")
            .row
              .input-field.col.s4
                input#first_name.validate(placeholder='Placeholder', type='text', name="username")
                label(for='first_name') Username
            .row
              .input-field.col.s4
                input#email.validate(type='email', name= 'email')
                label(for='email') Email
              .input-field.col.s4
                input#password.validate(type='password', name = 'password')
                label(for='password') Password
              .col.s4
                a.modal-action.modal-close.waves-effect.waves-light.btn(onclick="document.getElementById('myformRegister').submit()") Sign Up
