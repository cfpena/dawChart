doctype html
html
  head
    meta(charset='UTF-8')
    title RelationApp
    link(rel='stylesheet', href='styles/normalize.css')
    link(rel='stylesheet prefetch', href='http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css')
    link(rel='stylesheet', href='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css')
    link(rel='stylesheet', href='styles/login.css')
    link(rel='stylesheet', href='http://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.css')

    script(src='http://code.jquery.com/jquery-1.11.3.min.js')
    script(src='http://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.js')
    script(type='text/javascript', src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js')
    script(type='text/javascript', src='js/login.js')
    script(src='js/jquery.backstretch.min.js')
    script(type='text/javascript', src='js/slider.js')

  body
    article.container-fluid
      .logmod__wrapper
        .logmod__container
          ul.logmod__tabs
            li(data-tabtar='lgm-2')
              a(href='#') Login
            li(data-tabtar='lgm-1')
              a(href='#') Sign Up
          .logmod__tab-wrapper
            .logmod__tab.lgm-1
              .logmod__heading
                span.logmod__heading-subtitle
                  | Enter your personal details 
                  strong to create an acount
              .logmod__form
                form.simform(role="form", action="auth/local/register", method="post",accept-charset='utf-8')
                  .sminputs
                    .input.full
                      label.string.optional(for='user-name') Email*
                      input#user-email.string.optional(name='email',maxlength='255', placeholder='Email', type='email', size='50')
                  .sminputs
                    .input.string.optional
                      label.string.optional(for='user-pw') Username *
                      input#user-pw.string.optional(name='username', maxlength='255', placeholder='Username', type='text', size='50')
                    .input.string.optional
                      label.string.optional(for='user-pw-repeat') Password *
                      input#user-pw-repeat.string.optional(name='password',maxlength='255', placeholder='Password', type='password', size='50')
                  .simform__actions
                    input.sumbit(name='commit', type='submit', value='Create Account')
                    span.simform__actions-sidetext
                      | By creating an account you agree to our 
                      a.special(href='#', target='_blank', role='link') Terms & Privacy
              .login-bottom
                ul
                  li
                    p Login with
                  li
                    form#myformFacebook(role="form", action="auth/facebook", method="get")
                      a(onclick="document.getElementById('myformFacebook').submit()")
                        img(src='images/fb.png')
                  li
                    form#myformTwitter(role="form", action="auth/twitter", method="get")
                      a(onclick="document.getElementById('myformTwitter').submit()")
                        img(src='images/tw.png')
                  li
                    form#myformGoogle(role="form", action="auth/google", method="get")
                        a(onclick="document.getElementById('myformGoogle').submit()")
                          img(src='images/google.png')
                  li 
                    form#myformGitHub(role="form", action="auth/github", method="get")
                      a(onclick="document.getElementById('myformGitHub').submit()")
                        img(src='images/gh.ico')
                        
                  li
                    
                    a(href='#myPopup', data-rel='popup') 
                      img(src='images/espol.png')
                    #myPopup.ui-content(data-role='popup', style='min-width:250px;')
                      form(method='post', action='/loginEspol')
                        div
                          h3 Login Espol
                          label.ui-hidden-accessible(for='usrnm') Username:
                          input#username(type='text', name='username', placeholder='Username')
                          label.ui-hidden-accessible(for='pswd') Password:
                          input#password(type='password', name='password', placeholder='Password')
                          input(type='submit', data-inline='true', value='Log in')
            .logmod__tab.lgm-2
              .logmod__heading
                span.logmod__heading-subtitle
                  | Enter your email and password 
                  strong to sign in
              .logmod__form
                form.simform(role="form", action="auth/local", method="post")
                  .sminputs
                    .input.full
                      label.string.optional(for='user-name') Email*
                      input#user-email.string.optional(type="text", name="identifier", placeholder="Username or Email")
                  .sminputs
                    .input.full
                      label.string.optional(for='user-pw') Password *
                      input#user-pw.string.optional(type="password", name="password", placeholder="Password")

                  .simform__actions
                    input#btnInput.sumbit(name='commit', type='submit', value='Log In')

              .login-bottom
                ul
                  li
                    p Login with
                  li
                    form#myformFacebook(role="form", action="auth/facebook", method="get")
                      a(onclick="document.getElementById('myformFacebook').submit()")
                        img(src='images/fb.png')
                  li
                    form#myformTwitter(role="form", action="auth/twitter", method="get")
                      a(onclick="document.getElementById('myformTwitter').submit()")
                        img(src='images/tw.png')
                  li
                    form#myformGoogle(role="form", action="auth/google", method="get")
                        a(onclick="document.getElementById('myformGoogle').submit()")
                          img(src='images/google.png')
                  li 
                    form#myformGitHub(role="form", action="auth/github", method="get")
                      a(onclick="document.getElementById('myformGitHub').submit()")
                        img(src='images/gh.ico')
                        
                  li
                    
                    a(href='#myPopup', data-rel='popup') 
                      img(src='images/espol.png')
                    #myPopup.ui-content(data-role='popup', style='min-width:250px;')
                      form(method='post', action='/loginEspol')
                        div
                          h3 Login Espol
                          label.ui-hidden-accessible(for='usrnm') Username:
                          input#username(type='text', name='username', placeholder='Username')
                          label.ui-hidden-accessible(for='pswd') Password:
                          input#password(type='password', name='password', placeholder='Password')
                          input(type='submit', data-inline='true', value='Log in')
