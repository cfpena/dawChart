extends ./layout.jade

block scripts
  // JavaScript
  
  script(src='js/workarea.js')
  script(src='js/lodash.min.js')
  script(src='js/backbone-min.js')
  script(src='js/joint.min.js')
  script(src='js/area.js')
  script(src='js/sweet-alert.js')
  script(src='js/diagram.js')
  

block styles
  // CSS
  link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
  link(href='styles/materialize.css', type='text/css', rel='stylesheet', media='screen,projection')
  link(href='styles/style.css', type='text/css', rel='stylesheet', media='screen,projection')
  link(rel='stylesheet', type='text/css', href='styles/joint.min.css')
  link(rel='stylesheet', type='text/css', href='styles/diagram.css')
  link(rel='stylesheet', type='text/css', href='styles/sweet-alert.css')
  
block content
  .navbar-fixed
    nav.lime.lighten-2.z-depth-3
      .nav-wrapper
        a#logo-container.brand-logo.roboto-bold(href='#') DawChart
        ul.right.hide-on-med-and-down
          // Modal trigger Login - Sign Up
          li
            a.dropdown-button(data-activates='edit', href='#')
              i.material-icons view_module
          li
            a.dropdown-button(data-activates='help', href='#')
              i.material-icons live_help
          li
            a.dropdown-button(data-activates='profile', href='#')
              i.material-icons perm_identity
        ul#nav-mobile.side-nav
          li
            a(href='#') Log in
          li
            a(href='#') Sign Up
        a.button-collapse(href='#', data-activates='nav-mobile')
          i.material-icons menu
  
    
        // Diagramas container
    #drawContainer
      script(src='js/area.js')    
    // Tool Menu
    .fixed-action-btn.horizontal(style='bottom: 45px; right: 24px;')
      a.btn-floating.btn-large.red
        i.large.material-icons mode_edit
      ul
        li
          a#item1.btn-floating.red
            i.material-icons payment
        li
          a.btn-floating.yellow.darken-1
            i.material-icons format_quote
        li
          a.btn-floating.green
            i.material-icons publish
        li
          a.btn-floating.blue
            i.material-icons attach_file
